<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jee="http://www.springframework.org/schema/jee"
    xmlns:jms="http://www.springframework.org/schema/jms" xmlns:oxm="http://www.springframework.org/schema/oxm"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="
    http://www.springframework.org/schema/oxm http://www.springframework.org/schema/oxm/spring-oxm-3.1.xsd
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/jms http://www.springframework.org/schema/jms/spring-jms-3.1.xsd
    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- R SGE Connector beans -->
    <jms:listener-container connection-factory="jmsFactory" acknowledge="auto" error-handler="jmsErrorHandler" >
        <jms:listener destination="${psnscmsgeconnector.requestQueue}" ref="PsNSCMSgeConnector"
            method="onMessage" />
        <jms:listener destination="${psnscmsgeconnector.jobResultQueue}" ref="PsNSCMSgeJobRunnerResultListner"
            method="onMessage" />
        <jms:listener destination="${psnscmsgeconnector.jobCancelQueue}" ref="PsNSCMSgeCancellationResultListner"
            method="onMessage" />
    </jms:listener-container>

    <!-- Job Runner Result Listener -->
    <bean id="PsNSCMSgeJobRunnerResultListner" class="com.mango.mif.connector.JobRunnerResultListener">
        <property name="connector" ref="PsNSCMSgeConnector"/>
    </bean>

    <!-- Job Runner Cancellation Listener -->
    <bean id="PsNSCMSgeCancellationResultListner" class="com.mango.mif.connector.CancellationRequestListener">
        <property name="connector" ref="PsNSCMSgeConnector"/>
    </bean>

    <!-- Connector -->
    <bean id="PsNSCMSgeConnector" class="com.mango.mif.connector.Connector" parent="sgeConnector" scope="singleton">
        <property name="taskExecutor" ref="PsNSCMSgeJobRunnersTaskExecutor" />
        <property name="jobRunnerFactory" ref="PsNSCMSgeJobRunnerFactory"/>
        <property name="responseQueue" value="${psnscmsgeconnector.responseQueue}"/>
        <property name="requestQueue" value="${psnscmsgeconnector.requestQueue}"/>
        <property name="cancellationQueue" value="${psnscmsgeconnector.jobCancelQueue}"/>
        <property name="connectorId" value="${psnscmsgeconnector.connectorId}"/>
    </bean>
    
    <!-- Task Executor that is used to invoke job runners -->
    <bean id="PsNSCMSgeJobRunnersTaskExecutor"
        class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor"
        scope="prototype">
        <property name="corePoolSize"
            value="${psnscmsgeconnector.jobRunnersTaskExecutor.corePoolSize}" />
        <property name="maxPoolSize"
            value="${psnscmsgeconnector.jobRunnersTaskExecutor.maxPoolSize}" />
        <property name="queueCapacity"
            value="${psnscmsgeconnector.jobRunnersTaskExecutor.queueCapacity}" />
    </bean>
    
    <!-- Job Runner -->
    <bean id="PsNSCMSgeJobRunner" class="com.mango.mif.connector.runner.impl.GenericShellBasedJobRunner" scope="prototype" parent="sgeJobRunner">
        <property name="resultDestination" value="${psnscmsgeconnector.jobResultQueue}"/>
    </bean>


    <!-- Job Runner Factory -->
    <bean id="PsNSCMSgeJobRunnerFactory" class="com.mango.mif.connector.runner.impl.GenericShellBasedJobRunnerFactory" parent="sgeJobRunnerFactory">
        <lookup-method name="createJobRunner" bean="PsNSCMSgeJobRunner"/>
        <lookup-method name="getStateHandlers" bean="PsNSCMSgeStateHandlers"/>
    </bean>


    <!-- Command builders -->

    <bean id="PsNSCMSgeCommandBuilder"
        class="com.mango.mif.core.exec.template.JobAwareFreemarkerTemplateCommandBuilder"
        abstract="true" parent="sgeCommandBuilder">
        <constructor-arg index="0">
            <map merge="true">
                <entry>
                    <key><value>scriptExecutablePath</value></key>
                    <value>${psnscmsgeconnector.scriptExecutablePath}</value>
                </entry>
                <entry>
                    <key><value>NONMEMSGE_CONNECTOR_UTILS</value></key>
                    <value>${nonmemsgeconnector.connectorScriptsDirectory}</value>
                </entry>
                <entry>
                    <key><value>PSN_SGECONNECTOR_UTILS</value></key>
                    <value>${psnsgeconnector.connectorScriptsDirectory}</value>
                </entry>
            </map>
        </constructor-arg>
    </bean>



    <bean id="PsNSCMSgetask-finishedStateHandler"
        class="com.mango.mif.connector.runner.impl.GenericShellBasedStateHandler"
        scope="prototype" parent="defaultStateHandler">
        <constructor-arg index="0" value="task-finished" />
        <constructor-arg index="1" value="done.state.running" />
        <property name="commandBuilder">
            <bean parent="PsNSCMSgeCommandBuilder">
                <property name="template" value="${psnscmsgeconnector.task-finishedStateHandler.validateResultsTemplate}" />
            </bean>
        </property>
        <property name="invokerResultHandler">
            <bean class="com.mango.mif.connector.runner.impl.GenericShellCommandInvokerResultHandler">
                <constructor-arg value="done.state.running" />
            </bean>
        </property>
    </bean>
    
    <bean id="PsNSCMSgetask-monitoringStateHandler" parent="task-monitoringStateHandler">
        <property name="detailedStatusBuilder">
            <bean class="com.mango.mif.psnsgeconnector.PsNSCMRunningDetailedStatusBuilder">
                <property name="summaryCommandBuilder">
                    <bean parent="PsNSCMSgeCommandBuilder">
                        <property name="template" value="${psnscmsgeconnector.runningSummaryBuilderTemplate}"/>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>
    
    <bean id="PsNSCMSgefinishedStateHandler" parent="finishedStateHandler">
       <property name="detailedStatusBuilder">
            <bean class="com.mango.mif.psnsgeconnector.PsNSCMCompletedDetailedStatusBuilder">
                <property name="summaryCommandBuilder">
                    <bean parent="PsNSCMSgeCommandBuilder">
                        <property name="template" value="${psnscmsgeconnector.completedSummaryBuilderTemplate}"/>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>
    <!--
        State Handlers
     -->
    <bean id="PsNSCMSgeStateHandlers" class="java.util.ArrayList" scope="prototype">
        <constructor-arg>
        <list>
                <ref bean="pendingStateHandler"/>
                <ref bean="runningStateHandler"/>
                <ref bean="task-pendingStateHandler"/>

                <bean class="com.mango.mif.connector.runner.impl.ShellBasedPrepareHandler" scope="prototype"  parent="task-prepareStateHandler">
                    <property name="gridSubmitScriptBuilder">
                        <bean parent="PsNSCMSgeCommandBuilder">
                            <property name="template" value="${psnscmsgeconnector.submitScriptTemplate}"/>
                        </bean>
                    </property>
                </bean>

                <ref bean="task-submittingStateHandler"/>
                
                <ref bean="task-processingStateHandler"/>
                <ref bean="PsNSCMSgetask-monitoringStateHandler"/>
                <ref bean="task-post-monitoringStateHandler"/>
                <ref bean="task-monitoring-finishedStateHandler"/>
                
                <ref bean="task-retrievingStateHandler"/>
                
                <ref bean="task-postprocessingStateHandler"/>
                <ref bean="PsNSCMSgetask-finishedStateHandler"/>
                <ref bean="PsNSCMSgefinishedStateHandler"/>
                <ref bean="failedStateHandler"/>
                <ref bean="NONMEMSgeCancelledStateHandler"/>
            </list>
        </constructor-arg>
    </bean>
</beans>
